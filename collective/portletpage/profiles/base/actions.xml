<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">

 <object name="object" meta_type="CMF Action Category">
  <object name="portletpage_portlets" meta_type="CMF Action" i18n:domain="collective.portletpage">
   <property name="title" i18n:translate="">Manage Portlet Page portlets</property>
   <property name="description" i18n:translate=""></property>
   <property name="url_expr">string:${object_url}/@@portlets</property>
   <property name="icon_expr"></property>
   <property name="available_expr">python:object.restrictedTraverse("@@plone_interface_info").provides('collective.portletpage.interfaces.IPortletPage')</property>
   <property name="permissions">
     <element value="Modify portal content"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>

</object>
